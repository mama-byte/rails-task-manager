<h1>Edit a Task</h1>
  <%= form_for (@task) do |f| %>
   <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :details %>
    <%= f.text_field :details %>

    <%= f.submit %>
  <% end %>
  <%= link_to "Back to Task List",  tasks_path%>
